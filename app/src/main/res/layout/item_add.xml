<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/lay_add"
        android:layout_width="match_parent"
        android:layout_gravity="bottom|center"
        android:gravity="bottom|center"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tv_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:text="Add Updates"
            android:layout_marginLeft="@dimen/value_20"
            android:textStyle="bold"
            android:padding="@dimen/value_10"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/iv_cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:padding="@dimen/value_6"
            android:src="@drawable/ic_cancel_black_24dp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/value_20">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:background="@drawable/border"
            android:inputType="text"
            android:padding="@dimen/value_10" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:hint="Description"
            android:lines="3"
            android:layout_gravity="top"
            android:gravity="top"
            android:padding="@dimen/value_10" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_circle"
            android:elevation="@dimen/value_2"
            android:gravity="center"
            android:text="SUBMIT"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:gravity="center_horizontal|center_vertical"
            android:text="Or Register New Account."
            android:textColor="@color/white"
            android:textSize="16dp" />


    </LinearLayout>


</LinearLayout>