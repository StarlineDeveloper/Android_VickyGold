                            android:visibility="gone"
                            android:layout_marginTop="@dimen/value_15"
                            android:layout_marginBottom="@dimen/value_2"
                            android:text="Common Helpline No : 033-2236-5312"
                            android:background="@drawable/shape_contcat"
                            android:textSize="@dimen/value_16" />

                        <com.VijayAssayCenter.font.MyTextViewBold
                            android:id="@+id/email_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:layout_marginEnd="@dimen/value_10"
                            android:layout_marginStart="@dimen/value_5"
                            android:padding="@dimen/value_10"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/value_10"
                            android:layout_marginBottom="@dimen/value_2"
                            android:text="Common Helpline No : 033-2236-5312"
                            android:background="@drawable/shape_contcat"
                            android:textSize="@dimen/value_16" />

                        <com.VijayAssayCenter.font.MyTextViewBold
                            android:id="@+id/email_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginRight="@dimen/value_10"
                            android:layout_marginLeft="@dimen/value_5"
                            android:padding="@dimen/value_10"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/value_10"
                            android:layout_marginBottom="@dimen/value_2"
                            android:text="Common Helpline No : 033-2236-5312"
                            android:background="@drawable/shape_contcat"
                            android:textSize="@dimen/value_16" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/value_20"
                        android:layout_marginBottom="@dimen/value_20"
                        android:layout_marginRight="@dimen/value_15"
                        android:layout_marginLeft="@dimen/value_5"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:descendantFocusability="beforeDescendants"
                        android:background="@drawable/feeed"
                        android:layout_height="wrap_content">

                        <com.VijayAssayCenter.font.MyTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="FEEDBACK FORM"
                            android:padding="@dimen/value_15"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_18" />

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginLeft="@dimen/value_15"
                            android:layout_marginRight="@dimen/value_15"
                            android:layout_gravity="left"
                            android:singleLine="true"
                            android:hint="Name*"
                            android:textColor="@color/black"
                            android:padding="@dimen/value_10"
                            android:background="@drawable/shape_op"
                            android:textSize="@dimen/value_16" />

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginLeft="@dimen/value_15"
                            android:layout_marginRight="@dimen/value_15"
                            android:layout_gravity="left"
                            android:singleLine="true"
                            android:hint="Email Id*"
                            android:layout_marginTop="@dimen/value_10"
                            android:textColor="@color/black"
                            android:padding="@dimen/value_10"
                            android:background="@drawable/shape_op"
                            android:textSize="@dimen/value_16" />

                        <EditText
                            android:id="@+id/et_phon_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginLeft="@dimen/value_15"
                            android:layout_marginRight="@dimen/value_15"
                            android:layout_gravity="left"
                            android:singleLine="true"
                            android:inputType="number"
                            android:maxLength="10"
                            android:hint="Phone Number"
                            android:layout_marginTop="@dimen/value_10"
                            android:textColor="@color/black"
                            android:padding="@dimen/value_10"
                            android:background="@drawable/shape_op"
                            android:textSize="@dimen/value_16" />

                        <EditText
                            android:id="@+id/et_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginLeft="@dimen/value_15"
                            android:layout_marginRight="@dimen/value_15"
                            android:layout_gravity="left"
                            android:singleLine="true"
                            android:hint="Company*"
                            android:layout_marginTop="@dimen/value_10"
                            android:textColor="@color/black"
                            android:padding="@dimen/value_10"
                            android:background="@drawable/shape_op"
                            android:textSize="@dimen/value_16" />

