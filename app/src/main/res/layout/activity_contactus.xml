                            android:layout_marginRight="@dimen/value_10"
                            android:layout_marginLeft="@dimen/value_5"
                            android:padding="@dimen/value_10"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/value_5"
                            android:layout_marginBottom="@dimen/value_2"
                            android:text="Common Helpline No : 033-2236-5312"
                            android:background="@drawable/shape_contcat"
                            android:textSize="@dimen/value_16" />

                        <com.VijayAssayCenter.font.MyTextViewBold
                            android:id="@+id/tv_no_2"
