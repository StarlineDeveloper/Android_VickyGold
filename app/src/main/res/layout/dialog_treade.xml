        <com.VijayAssayCenter.font.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/value_5"
            android:layout_marginBottom="@dimen/value_30"
            android:gravity="center"
            android:paddingLeft="@dimen/value_20"
            android:paddingRight="@dimen/value_20"
            android:text="Note : BOOKING ONCE MADE CANNOT BE CANCELLED"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <com.VijayAssayCenter.font.MyTextViewBold
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBD879"
            android:gravity="center"
