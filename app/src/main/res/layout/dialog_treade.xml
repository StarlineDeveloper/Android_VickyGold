<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/disable_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/centerbackgaround"
        android:orientation="vertical">


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/value_30"
        android:layout_marginRight="@dimen/value_30"
        android:background="@drawable/shape_trade"
        android:gravity="center"
        android:orientation="vertical">

        <com.VijayAssayCenter.font.MyTextViewBold
            android:id="@+id/tv_symob_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/value_10"
            android:paddingBottom="@dimen/value_5"
            android:text="Take me here"
            android:textColor="@color/black"
            android:textSize="@dimen/value_20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_25"
            android:layout_marginTop="@dimen/value_8"
            android:layout_marginRight="@dimen/value_25"
            android:background="@drawable/shape_ki">

            <com.VijayAssayCenter.font.MyTextView
                android:id="@+id/tv_market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/bi"
                android:gravity="center"
                android:padding="@dimen/value_7"
                android:text="Market Rate"
                android:textColor="@color/white"
                android:textSize="@dimen/value_16" />

            <com.VijayAssayCenter.font.MyTextView
                android:id="@+id/tv_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="@dimen/value_7"
                android:text="Limit Rate"
                android:textColor="@color/black"
                android:textSize="@dimen/value_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_10"
                android:background="@drawable/shape_jik"
                android:orientation="vertical">


                <com.VijayAssayCenter.font.MyTextView
                    android:id="@+id/tv_bit_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/value_5"
                    android:text="SELL RATE"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value_20" />

                <com.VijayAssayCenter.font.MyTextViewBold
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/value_5"
                    android:gravity="center"
                    android:padding="@dimen/value_5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/value_20"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_15"
                android:layout_marginTop="@dimen/value_10"
                android:background="@drawable/shape_jik"
                android:orientation="vertical">


                <com.VijayAssayCenter.font.MyTextView
                    android:id="@+id/tv_bit_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/value_5"
                    android:text="BUY RATE"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value_20" />

                <com.VijayAssayCenter.font.MyTextViewBold
                    android:id="@+id/tv_sellamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/value_5"
                    android:gravity="center"
                    android:padding="@dimen/value_5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/value_20"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_gram_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_25"
            android:layout_marginTop="@dimen/value_15"
            android:layout_marginRight="@dimen/value_25"
            android:layout_marginBottom="@dimen/value_15"
            android:background="@drawable/shape_ki"
            android:orientation="horizontal">

            <com.VijayAssayCenter.font.MyTextView
                android:id="@+id/buy_in_gram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/bi"
                android:elevation="@dimen/value_3"
                android:gravity="center"
                android:padding="@dimen/value_7"
                android:text="Buy / Sell in GM"
                android:textColor="@color/white"
                android:textSize="@dimen/value_16" />

            <com.VijayAssayCenter.font.MyTextView
                android:id="@+id/tv_amoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="@dimen/value_7"
                android:text="Buy in Amount"
                android:textColor="@color/black"
                android:textSize="@dimen/value_16" />

            <com.VijayAssayCenter.font.MyTextView
                android:id="@+id/tv_amoy22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="@dimen/value_7"
                android:text="Buy in Amount"
                android:textColor="@color/black"
                android:textSize="@dimen/value_16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_quintity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/value_25"
            android:layout_marginRight="@dimen/value_25"
            android:orientation="horizontal">

            <com.VijayAssayCenter.font.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value_5"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="@dimen/value_7"
                android:text="QUANTITY : "
                android:textColor="@color/black"
                android:textSize="@dimen/font_14" />

            <com.VijayAssayCenter.font.MyTextView
                android:id="@+id/tv_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value_5"
                android:layout_weight="0.4"
                android:background="@drawable/bi"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:gravity="center"
                android:padding="@dimen/value_5"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/value_16" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_staic_qut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/value_25"
            android:layout_marginRight="@dimen/value_25"
            android:orientation="vertical">

            <com.VijayAssayCenter.font.MyTextView
                android:id="@+id/or_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/value_50"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/black"
                android:textSize="@dimen/value_16" />

            <LinearLayout
                android:id="@+id/manual_quty_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">


                <com.VijayAssayCenter.font.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/value_5"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:padding="@dimen/value_7"
                    android:text="QUANTITY: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14" />


                <EditText
                    android:id="@+id/tv_manual_quntite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/value_5"
                    android:layout_weight="0.4"
                    android:background="@drawable/shape_edit"
                    android:gravity="center"
                    android:hint="QUANTITY"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="@dimen/value_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value_16"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/value_25"
            android:layout_marginRight="@dimen/value_25"
            android:orientation="horizontal"
            android:visibility="gone">


            <com.VijayAssayCenter.font.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value_5"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="@dimen/value_7"
                android:text="RATE : "
                android:textColor="@color/black"
                android:textSize="@dimen/value_16" />


            <EditText
                android:id="@+id/tv_parice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value_5"
                android:layout_weight="0.4"
                android:background="@drawable/shape_edit"
                android:gravity="center"
                android:hint="RATE"
                android:inputType="number"
                android:padding="@dimen/value_5"
                android:textColor="@color/black"
                android:textSize="@dimen/value_16"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/value_25"
            android:layout_marginRight="@dimen/value_25"
            android:orientation="horizontal"
            android:visibility="gone">


            <com.VijayAssayCenter.font.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value_5"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="@dimen/value_7"
                android:text="Your Amount : "
                android:textColor="@color/black"
                android:textSize="@dimen/value_16" />


            <EditText
                android:id="@+id/et_amount_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value_5"
                android:layout_weight="0.5"
                android:background="@drawable/shape_edit"
                android:gravity="center"
                android:hint="Amount"
                android:inputType="number"
                android:padding="@dimen/value_5"
                android:textColor="@color/black"
                android:textSize="@dimen/value_16"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/value_15"
            android:layout_marginRight="@dimen/value_15"
            android:background="@drawable/bordernotes"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_50"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="Add your comment"
                android:paddingLeft="@dimen/font_12"
                android:textColor="@color/black"
                android:textSize="@dimen/value_16" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.VijayAssayCenter.font.MyTextViewBold
                android:id="@+id/sell_now"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_20"
                android:layout_marginTop="@dimen/value_20"
                android:layout_marginRight="@dimen/value_20"
                android:background="@drawable/redbutton"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="@dimen/value_10"
                android:text="SELL"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <com.VijayAssayCenter.font.MyTextViewBold
                android:id="@+id/buy_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_30"
                android:layout_marginTop="@dimen/value_20"
                android:layout_marginEnd="@dimen/value_20"
                android:background="@drawable/green"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="@dimen/value_10"
                android:text="BUY"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>


