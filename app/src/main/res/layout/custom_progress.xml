<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/value_40"
        android:layout_height="@dimen/value_40"
        android:layout_gravity="center"
        android:background="@drawable/shape_progress"
        wheel:matProg_barColor="@color/primecolor"
        wheel:matProg_barWidth="@dimen/value_3"
        android:padding="@dimen/value_2"
        wheel:matProg_progressIndeterminate="true" />

</LinearLayout>