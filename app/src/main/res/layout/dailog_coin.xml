<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/disable_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/centerbackgaround"
        android:orientation="vertical">


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/value_30"
        android:layout_marginRight="@dimen/value_30"
        android:background="@drawable/shape_trade"
        android:gravity="center"
        android:orientation="vertical">

        <com.VijayAssayCenter.font.MyTextViewBold
            android:id="@+id/tv_symob_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/value_10"
            android:paddingBottom="@dimen/value_5"
            android:text="Take me here"
            android:textColor="@color/black"
            android:textSize="@dimen/value_20"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_35"
            android:layout_marginTop="@dimen/value_10"
            android:layout_marginRight="@dimen/value_35"
            android:background="@drawable/shape_jik"
            android:orientation="vertical">


            <com.VijayAssayCenter.font.MyTextView
                android:id="@+id/tv_bit_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/value_5"
                android:text="Bid"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <com.VijayAssayCenter.font.MyTextViewBold
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/value_5"
                android:gravity="center"
                android:padding="@dimen/value_5"
                android:text="60"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_staic_qut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/value_10"
            android:gravity="right"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/manual_quty_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/value_20"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="visible">


                <com.VijayAssayCenter.font.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/value_5"
                    android:gravity="center"
                    android:padding="@dimen/value_7"
                    android:text="QUANTITY: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14" />

                <ImageView
                    android:id="@+id/iv_minus"

                    android:layout_width="@dimen/value_35"
                    android:layout_height="@dimen/value_35"
                    android:layout_gravity="center|right"
                    android:src="@drawable/ic_baseline_remove_circle_outline_24" />

                <EditText
                    android:id="@+id/tv_manual_quntite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/value_5"
                    android:background="@drawable/shape_edit"
                    android:gravity="center"
                    android:hint="QUANTITY"
                    android:inputType="number"
                    android:paddingLeft="@dimen/value_5"
                    android:paddingTop="@dimen/value_5"
                    android:paddingRight="@dimen/value_5"
                    android:paddingBottom="@dimen/value_5"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_plus"

                    android:layout_width="@dimen/value_35"
                    android:layout_height="@dimen/value_35"
                    android:layout_gravity="center|right"

                    android:src="@drawable/ic_baseline_add_circle_outline_24" />
            </LinearLayout>

            <com.VijayAssayCenter.font.MyTextViewBold
                android:id="@+id/tv_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/value_25"
                android:gravity="right"
                android:paddingTop="@dimen/value_10"
                android:text="Total: "
                android:textColor="@color/black"
                android:textSize="@dimen/font_18"
                android:textStyle="bold" />
        </LinearLayout>


        <com.VijayAssayCenter.font.MyTextViewBold
            android:id="@+id/buy_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_25"
            android:layout_marginTop="@dimen/value_20"
            android:layout_marginRight="@dimen/value_25"
            android:background="@drawable/green"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="@dimen/value_10"
            android:text="BUY"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />


        <com.VijayAssayCenter.font.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/value_5"
            android:layout_marginBottom="@dimen/value_30"
            android:gravity="center"
            android:paddingLeft="@dimen/value_20"
            android:paddingRight="@dimen/value_20"
            android:text="Note : BOOKING ONCE MADE CANNOT BE CANCELLED"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textSize="@dimen/font_14" />

        <com.VijayAssayCenter.font.MyTextViewBold
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBD879"
            android:gravity="center"
            android:padding="@dimen/value_10"
            android:text="CANCEL"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout>


</FrameLayout>