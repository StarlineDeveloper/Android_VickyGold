<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/value_8"
    android:layout_marginTop="@dimen/value_3"
    android:layout_marginRight="@dimen/value_8"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lay_item_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_min"
        android:orientation="vertical"
        android:padding="@dimen/value_5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/value_5"
                    android:paddingTop="@dimen/value_5">


                    <ImageView
                        android:id="@+id/iv_menu"
                        android:layout_width="@dimen/value_20"
                        android:layout_height="@dimen/value_20"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="@dimen/value_5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:orientation="vertical">

                            <com.VijayAssayCenter.font.MyTextViewBold
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:paddingRight="@dimen/value_15"
                                android:paddingBottom="@dimen/value_5"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="0.8"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_tham"
                                android:layout_width="@dimen/value_20"
                                android:layout_height="@dimen/value_20"
                                android:layout_gravity="right"
                                android:layout_marginRight="@dimen/value_5" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="left"
                android:orientation="horizontal">


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_buy_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/value_5"
            android:layout_marginTop="@dimen/value_8"
            android:layout_marginRight="@dimen/value_5"
            android:layout_marginBottom="@dimen/value_5"
            android:elevation="@dimen/value_2"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_10"
                android:layout_weight="0.5"
                android:orientation="horizontal">


                <com.VijayAssayCenter.font.MyTextViewBold
                    android:id="@+id/tv_rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="â‚¹ "
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <com.VijayAssayCenter.font.MyTextViewBold
                    android:id="@+id/tv_ask_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:paddingRight="@dimen/value_15"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.5"
                android:gravity="right"
                android:orientation="vertical">

                <com.VijayAssayCenter.font.MyTextViewBold
                    android:id="@+id/tv_by_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/btn1"
                    android:elevation="@dimen/value_2"
                    android:gravity="right"
                    android:padding="@dimen/value_8"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>