<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:layout_width="match_parent"
        android:background="#51ECCD87"
        android:layout_height="match_parent">

    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lay_back"
                android:layout_width="wrap_content"
                android:layout_gravity="top|left"
                android:padding="@dimen/value_15"
                android:layout_marginTop="@dimen/value_5"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="top|right"
                android:gravity="top"
                android:elevation="@dimen/value_2"
                android:layout_marginTop="@dimen/value_20"
                android:layout_marginRight="@dimen/value_25"
                android:layout_height="wrap_content">

                <com.VijayAssayCenter.font.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="News"
                    android:paddingRight="@dimen/value_15"
                    android:paddingTop="@dimen/value_2"
                    android:paddingBottom="@dimen/value_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />

            </LinearLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="@dimen/value_0.5"></View>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">




                <LinearLayout
                    android:id="@+id/lay_address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="@dimen/value_3"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <com.VijayAssayCenter.font.MyTextViewBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Date"
                                    android:layout_weight="0.7"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <com.VijayAssayCenter.font.MyTextViewBold
                                    android:id="@+id/date1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="00/00/0000"
                                    android:layout_weight="0.3"
                                    android:textStyle="bold"
                                    android:padding="5dp"
                                    android:layout_marginLeft="7dp"
                                    android:background="@drawable/date"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_12" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <com.VijayAssayCenter.font.MyTextViewBold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="to"
                                    android:layout_weight="0.7"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <com.VijayAssayCenter.font.MyTextViewBold
                                    android:id="@+id/date2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="00/00/0000"
                                    android:layout_weight="0.3"
                                    android:textStyle="bold"
                                    android:padding="5dp"
                                    android:background="@drawable/date"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_12" />

                            </LinearLayout>


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="0.7"
                            android:gravity="center"

                            android:layout_height="wrap_content">


                            <com.VijayAssayCenter.font.MyTextViewBold
                                android:id="@+id/tv_search"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Search"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:background="@drawable/goldenbutton"
                                android:padding="5dp"
                                android:textColor="@color/black"
                                android:textSize="12dp" />







                        </LinearLayout>
                    </LinearLayout>
















                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_height="1dp">

                </View>

            </LinearLayout>



            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_gravity="center"
                app:indicatorColor="#000000"
                app:indicatorName="LineSpinFadeLoaderIndicator" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoDataFound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="News Not Available" />

        </LinearLayout>












    </LinearLayout>
</FrameLayout>