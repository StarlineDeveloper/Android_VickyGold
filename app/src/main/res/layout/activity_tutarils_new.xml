<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/centerbackgaround">


    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:background="#51ECCD87"-->
    <!--        android:layout_height="match_parent">-->

    <!--    </View>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lay_back"
                android:layout_width="wrap_content"
                android:layout_gravity="top|left"
                android:padding="@dimen/value_15"
                android:layout_marginTop="@dimen/value_5"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="top|right"
                android:gravity="top"
                android:elevation="@dimen/value_2"
                android:layout_marginTop="@dimen/value_20"
                android:layout_marginRight="@dimen/value_25"
                android:layout_height="wrap_content">

                <com.VijayAssayCenter.font.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="About Us"
                    android:paddingRight="@dimen/value_15"
                    android:paddingTop="@dimen/value_2"
                    android:paddingBottom="@dimen/value_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />

            </LinearLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="@dimen/value_0.5"></View>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lay_1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/value_10"
                        android:layout_marginLeft="@dimen/value_10"
                        android:layout_height="wrap_content">

                        <com.VijayAssayCenter.font.MyTextView
                            android:id="@+id/ask_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/value_5"
                            android:padding="@dimen/value_15"
                            android:text="A simple, Safe and Transparent way to buy 24 karat Gold &amp; Silver with multiple features and benefits."
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14" />

                        <com.VijayAssayCenter.font.MyTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:padding="@dimen/value_10"
                            android:text="Watch Tutorial Videos"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <com.VijayAssayCenter.font.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/value_10"
                            android:text="Tutorial Bengali"
                            android:textColor="@color/black"
                            android:textSize="16dp"/>

                        <ImageView
                            android:id="@+id/iv_video1"
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:layout_marginLeft="@dimen/value_7"
                            android:scaleType="fitXY"
                            android:layout_marginTop="@dimen/value_5"
                            android:layout_marginRight="@dimen/value_7"
                            android:layout_gravity="center"
                            android:src="@drawable/imghindi" />

                        <com.VijayAssayCenter.font.MyTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:padding="@dimen/value_8"
                            android:text="Tutorial Bengali"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <com.VijayAssayCenter.font.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/value_10"
                            android:text="Tutorial Hindi"
                            android:textColor="@color/black"
                            android:textSize="16dp"/>

                        <ImageView
                            android:id="@+id/iv_video2"
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:layout_marginLeft="@dimen/value_7"
                            android:scaleType="fitXY"
                            android:layout_marginTop="@dimen/value_5"
                            android:layout_marginRight="@dimen/value_7"
                            android:layout_gravity="center"
                            android:src="@drawable/imghindi" />

                    </LinearLayout>
                </LinearLayout>


            </ScrollView>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>